extend marksheet.pug

block head 

block function
	- var examBody = function(x, index){
		each exam, index2 in x
			if index2 > 0
				td
					input(type="text", name=exam.name+'_'+index, value=exam.marks[index])
		if x.length > 0
			td !{x[0].marks[index]} !{x[0].parcentage[index]} 
	- }

block body
	div(class="container")
		form(action="/faculty/"+username+"/course/"+index+"/marksheet/edit/save" method="post")
			table(class="table table-striped table-bordered table-hover table-condensed table-responsive")
				thead
					tr
						th No.
						th Name
						th ID
						th Email
						- let x = marksheet.quiz
						- examTitle(x)
						- x = marksheet.mid
						- examTitle(x)
						- x = marksheet.assignment
						- examTitle(x)
						- x = marksheet.project
						- examTitle(x)
						- x = marksheet.presentation
						- examTitle(x)
						- x = marksheet.fieldWork
						- examTitle(x)
						- x = marksheet.final
						- examTitle(x)
						th Attendance
						th Total
						th Grade
				tbody
					each value, index in marksheet.name
						tr
							td !{index+1}
							td !{marksheet.name[index]}
							td !{marksheet.ID[index]}
							td !{marksheet.email[index]}
							- x = marksheet.quiz
							- examBody(x, index)
							- x = marksheet.mid
							- examBody(x, index)
							- x = marksheet.assignment
							- examBody(x, index)
							- x = marksheet.project
							- examBody(x, index)
							- x = marksheet.presentation
							- examBody(x, index)
							- x = marksheet.fieldWork
							- examBody(x, index)
							- x = marksheet.final
							- examBody(x, index)
							td
								input(type="text", name='attendance_'+index, value=marksheet.attendance[index])
							td !{marksheet.total[index]}
							td
								input(type="text", name='grade_'+index, value=marksheet.grade[index])
			input(type="submit" value="Save")
		a(href="/faculty/"+username+"/course/"+index+"/marksheet" class="btn btn-danger" role="button") Cancel