extends flexLayout.pug
block header
  include layout.pug

block content


  form(action="/faculty/"+username+"/profile/edit/save", method="post")
    .form-group
      label.font-weight-bold Name:
      input.form-control(type="text" name="name" value=name)
    .form-group
      label.font-weight-bold School:
      input.form-control(type="text" name="school" value=school)
    .form-group
      label.font-weight-bold Country:
      input.form-control(type="text" name="country" value=country)
    .form-group
      label.font-weight-bold Initial
      input.form-control(type="text" name="initial" value=initial)
    .form-group
      label.font-weight-bold Department
      input.form-control(type="text" name="department" value=department)
    .form-group
      label.font-weight-bold Office Room
      input.form-control(type="text" name="officeRoom" value=officeRoom)
    .form-group
      input.btn.btn-primary(type="submit" value="Save")
      a.btn.btn-secondary.ml-2(href="/faculty/"+username, role="button") Cancel
