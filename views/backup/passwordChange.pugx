doctype html
html
  include header.pug
  body
    include layout.pug
    div(class="container" style="padding-bottom:60px;")
      form(action="/faculty/"+username+"/password/change/save" method="post")
        div(class="form-group")
          label Current Password:
          input(type="password" name="currentPassword")
        div(class="form-group")
          label New Password:
          input(type="password" name="newPassword")
        div(class="form-group")
          input(type="submit" value="Save")
    div(class="container")
      a(href="/faculty/"+username class="btn btn-danger" role="button", style="margin-bottom:10px;") Cancel
    include footer.pug