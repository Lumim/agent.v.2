.card.text-center.m-5(style="width: 30rem;")
	.card-block
		h4.card-title Create a new account
		form#signup_form(method="post" action="/signup")
			.form-group
				input(type="text" name="name" placeholder="Name" required).form-control
			.form-group
				input(type="email" name="email" placeholder="Email" required).form-control
			.form-group
				input(type="text" name="username" placeholder="Username" required).form-control
			.form-group
				input(type="password" name="password" placeholder="Password" required minlength="6")#password.form-control
			.form-group
				input(type="password" name="repassword" placeholder="Retype Password" required)#repassword.form-control
			.row.mb-3
				.col-3
					input.mr-2.form-check-input(type="radio" name="portal" value="faculty")
					span Faculty
			.row.mb-3
				.col-3
					input.mr-2.form-check-input(type="radio" name="portal" value="student")
					span Student
			.form-group
				input.btn.btn-primary(type="submit" value="Signup")
